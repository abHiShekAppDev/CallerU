<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x8"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/x16"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32">

            <ImageView
                android:layout_width="@dimen/x22"
                android:layout_height="@dimen/x22"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/phoneImage"/>

            <ImageView
                android:id="@+id/callTypeIv"
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/x12"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/callTypeImage"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/callerNumberTv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/xs16"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="@dimen/x22"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/callTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="@dimen/x16"
                android:paddingTop="@dimen/x4"
                android:textSize="@dimen/xs12"
                android:textColor="@color/lightBlack"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/callDurationTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="@dimen/x16"
                android:paddingTop="@dimen/x4"
                android:textSize="@dimen/xs12"
                android:textColor="@color/lightBlack"
                android:fontFamily="sans-serif"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/browser_actions_bg_grey"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/x8"/>
</LinearLayout>