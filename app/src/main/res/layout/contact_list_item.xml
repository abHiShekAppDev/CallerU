<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x8"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x16"
        android:paddingRight="@dimen/x16"
        android:paddingTop="@dimen/x4">

        <TextView
            android:id="@+id/firstLetterTv"
            android:layout_width="@dimen/x32"
            android:layout_height="@dimen/x32"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/contact_round_background"
            android:textColor="@color/lightBlack"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/xs12"/>

        <TextView
            android:id="@+id/contactName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x22"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:textSize="@dimen/xs16"/>

        <ImageView
            android:layout_width="@dimen/x22"
            android:layout_height="@dimen/x22"
            android:layout_gravity="center_vertical|right"
            android:src="@drawable/ic_call_black_24dp"
            android:contentDescription="@string/phoneImage"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/browser_actions_bg_grey"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/x8"/>
</LinearLayout>